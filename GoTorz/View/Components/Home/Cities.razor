<h3>A Signature of Excelence</h3>

<div class="d-flex gap-3">
	@for (int i = 0; i < imagePaths.Length; i++)
	{
		<div class="card flex-fill">
			<img src="@imagePaths[i]" alt="@imageAlts[i]" style="width: 100%; height: 100%;" />
			<div class="card-body text-center">
				<p class="card-text">@imageAlts[i]</p>
			</div>
		</div>
	}
</div>

@code {
	private string[] imagePaths =
	{
		"https://images.pexels.com/photos/1850619/pexels-photo-1850619.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
		"https://images.pexels.com/photos/1388030/pexels-photo-1388030.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
		"https://images.pexels.com/photos/823696/pexels-photo-823696.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
		"https://images.pexels.com/photos/1414467/pexels-photo-1414467.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
	};

	private string[] imageAlts =
	{
		"Paris",
		"Barcelona",
		"Dubai",
		"Amsterdam"
	};
}
